<div class="page-header">
  <h1>
    Routes
    <a href="/routes/new" class="btn btn-lg btn-success">New Route</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Map</th>
      </tr>

      <% @routes.each do |route| %>
        <tr>
          <td><%= route.user.username %></td>
          <td><%= route.origin %></td>
          <td><%= route.destination %></td>
          <td><%= route.map %></td>
          <td>
            <div class="btn-group btn-group-justified">
              <% if current_user.id != route.user_id %>
                <a href="/routes" class="btn btn-primary">
                  Back
                </a>
              <% else %>   
                <a href="/routes/<%= route.id %>/edit" class="btn btn-warning">
                  Edit
                </a>
                <a href="/delete_route/<%= route.id %>" class="btn btn-danger" rel="nofollow">
                  Delete
                </a>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
