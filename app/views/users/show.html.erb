<div class="page-header">
  <div class="col-md-8 col-md-offset-2">
    <h1>
      <%= @user.username.capitalize %>'s routes
      <a href="/routes/new" class="btn btn-lg btn-success">New Route</a>
    </h1>
  </div>  
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Map</th>
        <th>Created</th>
      </tr>

      <% @routes.each do |route| %>
        <tr>
          <td><a href="/routes/<%= route.id %>"><%= route.name %></a></td>
          <td><%= route.origin %></td>
          <td><%= route.destination %></td>
          <td><a href="<%= route.map %>"><%= route.map %></a></td>
          <td><%= route.created_at %></td>
          <td>
            <div class="btn-group btn-group-justified">
              <% if current_user.id != route.user_id %>
                <a href="/routes" class="btn btn-primary">
                  Back
                </a>
              <% else %>   
                <a href="/routes/<%= route.id %>/edit" class="btn btn-warning">
                  Edit
                </a>
                <a href="/delete_route/<%= route.id %>" class="btn btn-danger" rel="nofollow">
                  Delete
                </a>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
