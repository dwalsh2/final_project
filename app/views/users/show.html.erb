<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h3>
        <%= @user.username %>
      </h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/routes/new" class="btn btn-default btn-block">
      Add a Route
    </a>

    <hr>
  </div>
</div>

<% @routes.each do |route| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/#{@user.id}"><%= @user.username %></a>
            <small>
              <%= route.updated_at %> ago
            </small>
          </h3>
        </div>
  
        <div class="panel-body">
          <a href="/routes/#{route.id}">
            <%= route.name %>
          </a>
        </div>
            
        <div class="panel-body">
          <a href="/routes/#{route.id}">
            <img src="<%= route.map %>" class="img-responsive">
          </a>
        </div>
        
        <div class="btn-group btn-group-justified">
          <% if current_user.id != route.user_id %>
            <a href="/routes" class="btn btn-primary">
              Back
            </a>
          <% else %>   
            <a href="/routes/<%= route.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_route/<%= route.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </div>
      </div>  
    </div>
  </div>
<% end %>  
          
