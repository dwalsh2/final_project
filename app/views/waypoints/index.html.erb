<div class="page-header">
  <h1>
    Waypoints
    <a href="/waypoints/new" class="btn btn-lg btn-success">New Waypoint</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Route</th>
        <th>Actions</th>
      </tr>

      <% @waypoints.each do |waypoint| %>
      <tr>
        <td><%= waypoint.latitude %></td>
        <td><%= waypoint.longitude %></td>
        <td><%= waypoint.route_id %></td>
        <td>
          <a href="/waypoints/<%= waypoint.id %>" class="btn btn-primary">Show</a>
          <a href="/waypoints/<%= waypoint.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_waypoint/<%= waypoint.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
