<div class="page-header">
  <div class="col-md-8 col-md-offset-2">
    <h1>
      <%= current_user.username.capitalize %>'s bookmarks
      <a href="/businesses/new" class="btn btn-lg btn-success">New Business</a>
    </h1>
  </div>  
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Business Name</th>
        <th>Route</th>
        <th>Actions</th>
      </tr>
      
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><a href="/businesses/<%= bookmark.business_id %>"><%= bookmark.business.name %></a></td>
          <td><a href="/routes/<%= bookmark.waypoint.route_id %>"><%= bookmark.waypoint.route.name %></a></td>
          <td>
            <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
      <% end %> 
    </table>
  </div>  
</div>

        




