<!-- Validation failure messages -->
<% if @bookmark.errors.any? %>
  <% @bookmark.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmark</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for waypoint_id -->
      <div class="form-group">
        <label for="waypoint_id" class="control-label">
          Waypoint
        </label>

        <input type="text" id="waypoint_id" name="waypoint_id" placeholder="Waypoint" class="form-control" value="<%= @bookmark.waypoint_id %>">
      </div>

      <!-- Label and input for business_id -->
      <div class="form-group">
        <label for="business_id" class="control-label">
          Business
        </label>

        <input type="text" id="business_id" name="business_id" placeholder="Business" class="form-control" value="<%= @bookmark.business_id %>">
      </div>
      
      

      <button class="btn btn-success">
        Create Bookmark
      </button>
      or
      <a href="/bookmarks">Cancel</a>
    </form>
  </div>
</div>
